#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "irb"
require "cli_progress_bar"


# Append to path for ../lib/cli_progress_bar
$LOAD_PATH.unshift(File.expand_path("../lib", __dir__))


def reload
  load "cli_progress_bar.rb"
  load "cli_progress_bar/version.rb"
  load "cli_progress_bar/progress_bar.rb"
  load "cli_progress_bar/percent_progress_bar.rb"
  load "cli_progress_bar/item_progress_bar.rb"
  load __FILE__  # This file
end


def test_percent
  progress_bar = CLIProgressBar.new(of: "2.3 MiB")

  progress_bar.update(20)
  progress_bar.update(40)
  progress_bar.update(60)
  progress_bar.update(80)
  progress_bar.update(100)

  nil
end

def test_items
  File.open("./progress_report.txt", "w") do |f|
    progress_bar = CLIProgressBar.new_item_bar(5, stream: f)
    5.times { |i| progress_bar.update(i + 1) }
  end

  nil
end


IRB.start(__FILE__)
